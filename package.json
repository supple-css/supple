{
  "name": "@supple-kit/supple-css",
  "version": "5.0.1",
  "description": "Reliable and testable Sass framework. Fluid, Variable, supple if you will",
  "main": "index.scss",
  "repository": "https://github.com/supple-kit/supple-css.git",
  "author": "Bram Smulders <source@bram.is>",
  "funding": [
    {
      "type": "github",
      "url": "https://www.github.com/sponsors/bramsmulders"
    },
    {
      "type": "paypal",
      "url": "https://www.paypal.me/smuldersbram/EUR"
    }
  ],
  "license": "MIT",
  "keywords": [
    "supple",
    "supple kit",
    "css",
    "scss",
    "itcss",
    "grid",
    "framework",
    "bem"
  ],
  "scripts": {
    "test": "npm run lint && npm run build && npm run gzip",
    "lint": "stylelint \"**/*.scss\"",
    "lint:fix": "prettier --write .",
    "gzip": "gzip-size test/css/index.css",
    "postcss": "postcss test/css/**/*.css --replace",
    "sass": "sass index.scss:test/css/index.css test/scss/test.scss:test/css/test.css --no-source-map",
    "build": "npm run sass && npm run postcss",
    "serve": "browser-sync start --server --files 'test/css/*.css, ./**/*.html' --index 'test.html'",
    "watch": "nodemon -e scss -x \"npm run test\"",
    "start": "concurrently 'npm run serve' 'npm run watch'",
    "docs:scripts": "esbuild _docs/assets/js/scripts.js --bundle --outfile=_docs/templates/_includes/assets/js/scripts.js --minify",
    "docs:scripts:watch": "nodemon --watch './src/assets/js/*' -e ts,tsx,js,jsx --exec \"npm run docs:scripts\"",
    "docs:styles:postprocess": "postcss _docs/templates/_includes/assets/css/**/*.css --replace",
    "docs:styles:preprocess": "sass _docs/assets/scss:_docs/templates/_includes/assets/css --load-path=./",
    "docs:styles:preprocess:production": "npm run docs:styles:preprocess -- --style=compressed --no-source-map",
    "docs:styles": "npm run docs:styles:preprocess && npm run docs:styles:postprocess",
    "docs:styles:production": "npm run docs:styles:preprocess:production && npm run docs:styles:postprocess",
    "docs:start": "npm run docs:styles:preprocess && npm run docs:scripts && concurrently \"npm run docs:styles:preprocess -- --watch\" \"npm run docs:scripts:watch\" \"npm run docs:serve\"",
    "docs:serve": "cross-env ELEVENTY_ENV=development eleventy --serve",
    "docs:build": "npm run lint && npm run docs:styles:production && npm run docs:scripts && eleventy"
  },
  "browserslist": [
    "defaults"
  ],
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-img": "^0.8.3",
    "@11ty/eleventy-navigation": "^0.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.0",
    "@supple-kit/stylelint-config-supple": "^3.0.4",
    "@tbranyen/jsdom": "^13.0.0",
    "autoprefixer": "^10.2.6",
    "browser-sync": "^2.26.14",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "cssnano": "^4.1.11",
    "esbuild": "^0.11.13",
    "glob": "^7.1.7",
    "gzip-size-cli": "^4.1.0",
    "html-escaper": "^3.0.3",
    "html-minifier": "^4.0.0",
    "md5": "^2.3.0",
    "nodemon": "^2.0.7",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "sass": "^1.34.0",
    "slugify": "^1.5.0",
    "strip-comments": "^2.0.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-scss": "^3.19.0"
  }
}
